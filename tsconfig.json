{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "typeRoots": ["./node_modules/@types", "./@types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "@utils/*": ["utils/*"],
      "@public/*": ["public/*"],
      "@dashboard/*": ["app/(dashboard)/*"],
      "@auth/*": ["app/(auth)/*"],
      "@interfaces/*": ["interfaces/*"],
    }
  },
  "include": [
    "app/**/*",
    "utils/**/*",
    "@types/**/*",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
